    function del(uid){
        var tr = document.getElementById(uid);
        tr.parentNode.removeChild(tr);
        fetch('http://localhost:3000/user', {
            method: 'delete',
            headers: {'Content-Type': 'application/x-www-form-urlencoded'},
            body:'item=' + uid
        });
    }  

