<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>用户管理</title>
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css"/>
    <link rel="stylesheet" href="/stylesheets/index.css">
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/stylesheets/tab.css" rel="stylesheet" type="text/css">
    <script src="/javascripts/jquery.js"></script>
    <script src="/javascripts/bootstrap.min.js" type="text/javascript" charset="utf-8"></script>
</head>
<body>
    <% include header.ejs%>
    <% include tab.ejs%> 
    <div style="float:left;">  
        <h4 style="color:lightcoral">用户管理</h4>
        <div style="margin-left:100px;">
            <form method="post">                           
                <table>
                    <tr>
                        <td>用户ID</td>
                        <td>
                            <input name="uid" />
                        </td>
                        <td>用户名</td>
                        <td>
                            <input type="text" name="uname"/>
                        </td>
                        <td>头像</td>
                        <td>
                            <input type="file" name="uimg"/>
                        </td>                                                               
                    </tr>
                    <tr>
                        <td>联系方式</td>
                        <td>
                            <input type="number" name="utel"/>
                        </td>  
                        <td>密码</td>
                        <td>
                            <input type="number" name="upwd"/>
                        </td>                                                                         
                    </tr>                      
                </table>
                <input type="submit" value="添加" style="float:right;">                       
            </form>
        </div>  
        <br>
        <hr>                  
        <table width='100%' cellpadding='5' style="margin-left:100px;">
            <tr>                           
                <th>用户ID</th>
                <th>用户名</th>
                <th>头像</th>
                <th>联系方式</th>
                <th>密码</th>  
                <th>注册时间</th> 
                <th>操作</th> 
            </tr>
            <% for(var item in items){ %>
                <tr class="top" id="<%= items[item].uid %>">
                    <td><%= items[item].uid %></td>  
                    <td><%= items[item].uname %></td>  
                    <td><img src="<%= items[item].uimg %>" style="width:30px;height:30px"></td>
                    <td><%= items[item].utel %></td>  
                    <td><%= items[item].upwd %></td>  
                    <td><%= items[item].udate %></td>                      
                    <td><button onclick="del('<%= items[item].uid %>')">删除</button>&nbsp;<button onclick="change()">修改</button></td>                    
                </tr>
            <% } %>
        </table>    
    </div> 
</body>
<script>
    function del(uid){
        fetch('http://192.168.189.144:3000/', {
        method: 'delete',
        headers: {'Content-Type': 'application/x-www-form-urlencoded'},
        body:'item=' + uid
        });
        showData(uid);
    }
    function showData(id){
        var tr = document.getElementById(id);
        tr.parentNode.removeChild(tr);
    }
    function change(){
        layer.open({
                type: 2,
                title: '添加用户',
                maxmin: true,
                shadeClose: true, //点击遮罩关闭层
                area : ['800px' , '520px'],
                content: 'user-add'
        });
    }
    //添加用户
    $('#insert').on('click', function(){
            layer.open({
                type: 2,
                title: '添加用户',
                maxmin: true,
                shadeClose: true, //点击遮罩关闭层
                area : ['800px' , '520px'],
                content: 'user-add'
        });
    });
</script>
</html>